        function Tab:AddSection(text)
            local Section = Instance.new("Frame")
            Section.Size = UDim2.new(1, 0, 0, 32)
            Section.BackgroundTransparency = 1
            Section.Parent = TabContent
            
            local SectionLabel = Instance.new("TextLabel")
            SectionLabel.Size = UDim2.new(1, 0, 1, 0)
            SectionLabel.BackgroundTransparency = 1
            SectionLabel.Text = text
            SectionLabel.Font = Enum.Font.GothamBold
            SectionLabel.TextSize = 16
            SectionLabel.TextColor3 = Theme.Text
            SectionLabel.TextXAlignment = Enum.TextXAlignment.Left
            SectionLabel.Parent = Section
            
            local SectionLine = Instance.new("Frame")
            SectionLine.Size = UDim2.new(1, 0, 0, 2)
            SectionLine.Position = UDim2.new(0, 0, 1, -4)
            SectionLine.BackgroundColor3 = Theme.Accent
            SectionLine.BorderSizePixel = 0
            SectionLine.Parent = Section
            
            Instance.new("UICorner", SectionLine).CornerRadius = UDim.new(0, 1)
        end
        
        return Tab
    end
    
    function self:Notify(title, content, duration, notifType)
        task.spawn(function()
            duration = duration or 3
            notifType = notifType or "Info"
            
            local typeColors = {
                Info = Theme.Accent,
                Success = Theme.Success,
                Warning = Theme.Warning,
                Error = Theme.Error
            }
            
            local notifColor = typeColors[notifType] or Theme.Accent
            
            local Notif = Instance.new("Frame")
            Notif.Size = UDim2.new(1, 0, 0, 80)
            Notif.BackgroundColor3 = Theme.Surface
            Notif.BorderSizePixel = 0
            Notif.Parent = NotifHolder
            
            Instance.new("UICorner", Notif).CornerRadius = UDim.new(0, 10)
            
            local NotifStroke = Instance.new("UIStroke")
            NotifStroke.Color = notifColor
            NotifStroke.Thickness = 2
            NotifStroke.Parent = Notif
            
            local NotifTitle = Instance.new("TextLabel")
            NotifTitle.Size = UDim2.new(1, -20, 0, 22)
            NotifTitle.Position = UDim2.fromOffset(10, 8)
            NotifTitle.BackgroundTransparency = 1
            NotifTitle.Text = title or "Notification"
            NotifTitle.Font = Enum.Font.GothamBold
            NotifTitle.TextSize = 15
            NotifTitle.TextColor3 = Theme.Text
            NotifTitle.TextXAlignment = Enum.TextXAlignment.Left
            NotifTitle.Parent = Notif
            
            local NotifContent = Instance.new("TextLabel")
            NotifContent.Size = UDim2.new(1, -20, 0, 42)
            NotifContent.Position = UDim2.fromOffset(10, 32)
            NotifContent.BackgroundTransparency = 1
            NotifContent.Text = content or "No content"
            NotifContent.Font = Enum.Font.Gotham
            NotifContent.TextSize = 13
            NotifContent.TextColor3 = Theme.TextDim
            NotifContent.TextXAlignment = Enum.TextXAlignment.Left
            NotifContent.TextYAlignment = Enum.TextYAlignment.Top
            NotifContent.TextWrapped = true
            NotifContent.Parent = Notif
            
            local Progress = Instance.new("Frame")
            Progress.Size = UDim2.new(1, 0, 0, 3)
            Progress.Position = UDim2.new(0, 0, 1, -3)
            Progress.BackgroundColor3 = notifColor
            Progress.BorderSizePixel = 0
            Progress.Parent = Notif
            
            Instance.new("UICorner", Progress).CornerRadius = UDim.new(0, 2)
            
            Tween(Progress, {Size = UDim2.new(0, 0, 0, 3)}, duration)
            
            task.wait(duration)
            
            Tween(Notif, {Size = UDim2.new(1, 0, 0, 0)}, 0.3)
            task.wait(0.3)
            Notif:Destroy()
        end)
    end
    
    function self:Destroy()
        ScreenGui:Destroy()
    end
    
    -- Entrance animation
    Main.Size = UDim2.fromOffset(0, 0)
    Tween(Main, {Size = UDim2.fromOffset(550, 600)}, 0.4)
    
    return self
end

return Fusion